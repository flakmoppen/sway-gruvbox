# Key key binds
bindsym {
    # Kill window
    $mod+Shift+q kill

    # Start a terminal
    $mod+Return exec $term

    # Launcher
    $mod+d exec $menu

    # Reload the config
    $mod+Shift+c reload

    # Exit sway
    $mod+Shift+e exec swaynag -t warning -m 'You pressed the exit shortcut. Do you really want to exit sway? This will end your Wayland session.' -B 'Yes, exit sway' 'swaymsg exit'
}


# Manage windows
bindsym {
    $mod+$left  focus left
    $mod+$down  focus down
    $mod+$up    focus up
    $mod+$right focus right

    $mod+Left   focus left
    $mod+Down   focus down
    $mod+Up     focus up
    $mod+Right  focus right

    $mod+Shift+$left    move left
    $mod+Shift+$down    move down
    $mod+Shift+$up      move up
    $mod+Shift+$right   move right

    $mod+Shift+Left     move left
    $mod+Shift+Down     move down
    $mod+Shift+Up       move up
    $mod+Shift+Right    move right

    $mod+Shift+1 move container to workspace number 1
    $mod+Shift+2 move container to workspace number 2
    $mod+Shift+3 move container to workspace number 3
    $mod+Shift+4 move container to workspace number 4
}

# Workspaces:
bindsym {
    $mod+1 workspace number 1
    $mod+2 workspace number 2
    $mod+3 workspace number 3
    $mod+4 workspace number 4

#    $mod+button4 focus left
#    $mod+button5 focus right
}

# Layout:
bindsym {
    # Split along axis
    $mod+h splith
    $mod+v splitv

    # Switch between layout styles
    $mod+s layout stacking
    $mod+w layout tabbed
    $mod+e layout toggle split

    # Fullscreen
    $mod+f fullscreen

    # Toggle tiling/floating
    $mod+Shift+space floating toggle

    # Scratchpad:
    $mod+Shift+minus move scratchpad
    $mod+minus scratchpad show
}

# Swap focus between the tiling area and the floating area
bindsym $mod+space focus mode_toggle

# Move focus to the parent container
bindsym $mod+a focus parent

# Resizing
bindsym $mod+r mode "resize"

# Recordings
bindsym {
    # Screenshots
    Print               exec grim && grim - | wl-copy --type image/png
    $mod+Print          exec grim -g "$(slurp -w 0 -d)" - | wl-copy --type image/png
    $mod+Shift+Print    exec grim -g "$(slurp -w 0 -d)" - | swappy -f -

    # Screen recording
}
