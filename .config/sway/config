### Window styles
gaps inner 4
gaps outer 0

default_border pixel 2
default_floating_border pixel 2

# Window borders
set {
    $color-high         #d65d0e
    $color-medium       #d79921
    $color-low          #d5c4a1
    $color-back         #3c3836
    $color-text         #bdae93
    $color-alert        #cc241d
}
# WINDOW CLASS                  BORDER          BACKGROUND      TEXT            INDICATOR       CHILD BORDER
client.focused                  $color-high     $color-back     $color-text     $color-low      $color-high
client.focused_inactive         $color-medium   $color-back     $color-text     $color-low      $color-medium
client.focused_tab_title        $color-high     $color-back     $color-text
client.unfocused                $color-low      $color-back     $color-text     $color-low      $color-low
client.urgent                   $color-alert    $color-back     $color-text     $color-medium   $color-alert

### Variables
# Use Mod1 for Alt as modifier.
set $mod Mod1

set {
    $left   j
    $down   k
    $up     i
    $right  l
}

# Terminal emulator
set $term alacritty

# Application launcher
set $menu wofi --show

# Wallpaper
output * bg /home/eddo/Documents/Wallpapers/lotus-wallpaper.png fill

# Idle configuration
# To reload swayidle use: killall swayidle
# and set 'exec' to 'exec_always' below.
# Don't forget to reset to 'exec' after testing is done, to avoid having  multiple swayidle
# sessions running in the background.
exec swayidle -w \
    timeout 30 "brillo -O && brillo -u 1000000 -q -S 15" \
	resume "brillo -I" \
    timeout 120 "swaymsg 'output * dpms off'" \
	resume "swaymsg 'output * dpms on'"

for_window [class=".*"] {
	inhibit_idle fullscreen
	opacity set 0.8
}
#for_window [app_id=".*"] ...
	

### Input configuration
# You can get the names of your inputs by running: swaymsg -t get_inputs
# If you get a "Unable to retrieve socket path" error. Run:
# export SWAYSOCK=/run/user/$(id -u)/sway-ipc.$(id -u).$(pgrep -x sway).sock
# Read `man 5 sway-input` for more information about this section.
input "1:1:AT_Translated_Set_2_keyboard" {
	xkb_layout "se"
	xkb_numlock enabled
}

### Key bindings
# Start a terminal
bindsym $mod+Return exec $term

# Kill window
bindsym $mod+Shift+q kill

# Launcher
bindsym $mod+d exec $menu

# Key to use to manipulate floating windows.
# Change 'normal' to 'inverse' to switch right and left mouse button.
floating_modifier $mod normal

# Reload the config
bindsym $mod+Shift+c reload

# Exit sway
bindsym $mod+Shift+e exec swaynag -t warning -m 'You pressed the exit shortcut. Do you really want to exit sway? This will end your Wayland session.' -B 'Yes, exit sway' 'swaymsg exit'

# Manage windows
bindsym {
    $mod+$left  focus left
    $mod+$down  focus down
    $mod+$up    focus up
    $mod+$right focus right

    $mod+Left   focus left
    $mod+Down   focus down
    $mod+Up     focus up
    $mod+Right  focus right

    $mod+Shift+$left    move left
    $mod+Shift+$down    move down
    $mod+Shift+$up      move up
    $mod+Shift+$right   move right

    $mod+Shift+Left     move left
    $mod+Shift+Down     move down
    $mod+Shift+Up       move up
    $mod+Shift+Right    move right

    $mod+Shift+1 move container to workspace number 1
    $mod+Shift+2 move container to workspace number 2
    $mod+Shift+3 move container to workspace number 3
    $mod+Shift+4 move container to workspace number 4
}

# Workspaces:
bindsym {
    $mod+1 workspace number 1
    $mod+2 workspace number 2
    $mod+3 workspace number 3
    $mod+4 workspace number 4
}

# Layout:
bindsym {
    # Split along axis
    $mod+h splith
    $mod+v splitv

    # Switch between layout styles
    $mod+s layout stacking
    $mod+w layout tabbed
    $mod+e layout toggle split

    # Fullscreen
    $mod+f fullscreen

    # Toggle tiling/floating
    $mod+Shift+space floating toggle

    # Scratchpad:
    $mod+Shift+minus move scratchpad
    $mod+minus scratchpad show
}

# Swap focus between the tiling area and the floating area
bindsym $mod+space focus mode_toggle

# Move focus to the parent container
bindsym $mod+a focus parent

# Resizing
bindsym $mod+r mode "resize"

mode "resize" {
    # Custom directional keys
    bindsym $left resize shrink width 10px
    bindsym $down resize grow height 10px
    bindsym $up resize shrink height 10px
    bindsym $right resize grow width 10px

    # Arrow keys
    bindsym Left resize shrink width 10px
    bindsym Down resize grow height 10px
    bindsym Up resize shrink height 10px
    bindsym Right resize grow width 10px

    # Return to default mode
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

# Print screen
bindsym {
    Print              exec grim && grim - | wl-copy --type image/png
    $mod+Print          exec grim -g "$(slurp -w 0 -d)" - | wl-copy --type image/png
    $mod+Shift+Print    exec grim -g "$(slurp -w 0 -d)" - | swappy -f -
}

# Status Bar:
bar {
	swaybar_command waybar
}
